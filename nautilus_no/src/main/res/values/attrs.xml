<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Rotate3d">
        <attr name="fromDegrees" format="float" />
        <attr name="toDegrees" format="float" />
        <attr name="centerX" format="float|fraction" />
        <attr name="centerY" format="float|fraction" />
        <attr name="depthZ" format="float" />
        <attr name="reverse" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="AutoAdjustHeightImageView">
        <attr name="aspectRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="LimitNumberEditView">
        <attr name="limitNum" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <!-- Style of the circle indicator. -->
        <attr name="vpiCirclePageIndicatorStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CirclePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="centered" format="boolean" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color" />
        <!-- Orientation of the indicator. -->
        <attr name="my_orientation" format="integer"/>
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="radius" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <!-- View background -->
        <attr name="my_background" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CustomLineView">
        <attr name="firstColor" format="color"/>
        <attr name="secondColor" format="color"/>
        <attr name="circleWidth" format="dimension"/>
        <attr name="circleColor" format="color"/>
        <attr name="speed" format="integer"/>
        <attr name="levelNameLightColor" format="color"/>
        <attr name="levelNameColor" format="color"/>
    </declare-styleable>

</resources>