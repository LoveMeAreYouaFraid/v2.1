<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical">

    <include layout="@layout/app_title" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="您可以选择或输入货品品类"
        android:maxLength="200"
        android:padding="@dimen/fifteen"
        android:textColor="@color/normal_black"
        android:textSize="@dimen/text_size_extra_small" />

    <TextView
        android:id="@+id/tv_goods_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:textColor="@color/important_reminders"
        android:textSize="@dimen/text_size_mini" />

    <TextView
        android:id="@+id/my_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/item_press_selector"
        android:gravity="center|left"
        android:padding="@dimen/fifteen"
        android:text="常见货品品类(可多选)"
        android:textColor="@color/dark_gray" />


    <EditText
        android:id="@+id/other"
        android:layout_width="match_parent"
        android:layout_height="@dimen/butt"
        android:background="@null"
        android:hint="在这里输入其他城市"
        android:paddingLeft="@dimen/fifteen"
        android:paddingRight="@dimen/fifteen"
        android:textSize="@dimen/fifteen"
        android:textColor="@color/normal_black"
        android:visibility="gone" />

    <com.nautilus.ywlfair.widget.flowlayout.TagFlowLayout
        android:id="@+id/id_flow_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        zhy:max_select="-1" />

</LinearLayout>