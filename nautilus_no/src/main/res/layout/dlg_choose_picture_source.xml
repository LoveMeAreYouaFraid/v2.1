<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="45dp"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:singleLine="true"
        android:text="提示 "
        android:textColor="@color/normal_black"
        android:textSize="@dimen/text_size_middle" />

    <include layout="@layout/fenge_hei" />

    <TextView
        android:id="@+id/tv_choice_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_default_selector"
        android:gravity="center"
        android:minHeight="45dp"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:textColor="@color/normal_black"
        android:textSize="@dimen/text_size_middle" />

    <include layout="@layout/fengexianx" />

    <TextView
        android:id="@+id/tv_choice_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_default_selector"
        android:gravity="center"
        android:minHeight="45dp"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:textColor="@color/normal_black"
        android:textSize="@dimen/text_size_middle" />

    <include android:id="@+id/fenggexian"
        layout="@layout/fengexianx" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_default_selector"
        android:gravity="center"
        android:minHeight="45dp"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:text="取消"
        android:textColor="@color/normal_black"
        android:textSize="@dimen/text_size_middle" />

</LinearLayout>