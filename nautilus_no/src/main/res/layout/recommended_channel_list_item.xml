<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/item_press_selector"
              android:orientation="horizontal"
              android:paddingLeft="2dp"
              android:paddingRight="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/recommend_item_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:paddingLeft="@dimen/title_right_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/wu">

            <TextView
                android:id="@+id/recommend_item_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创意分享"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_mini"/>

            <TextView
                android:id="@+id/recommend_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="发生的防守对打算打算把打火机阿什顿gas机构大举申购冻结卡的撒娇的卡拉胶圣诞快乐方受到广泛撒地"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/recommend_item_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/diansibain"
                android:drawablePadding="8dp"
                android:paddingTop="5dp"
                android:text="作者:大苏  2015 06~"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_mini"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:drawableLeft="@drawable/ic_praise_num"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:text="123"/>

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/ic_commend_num"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:text="123"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>