<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.nautilus.ywlfair.widget.HackyViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"/>

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_h"
        android:background="#000000"
        android:layout_gravity="top"
        >
        

        <TextView
            android:id="@+id/tv_top_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_back_white"
            android:gravity="center"
            android:textSize="@dimen/text_size_large" />
        
        <TextView 
            android:id="@+id/tv_top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            />


		<ImageView 
		    android:id="@+id/iv_top_bar_right"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_top_bar_delete"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:padding="5dp"/>

    </RelativeLayout>

</FrameLayout>