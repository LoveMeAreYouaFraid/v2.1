<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_title" />

    <LinearLayout
        android:id="@+id/layout_ail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/butt"
            android:background="@color/transparent"
            android:hint="请输入邀请码"
            android:paddingLeft="@dimen/fifteen"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/text_size_extra_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fifteen"
            android:paddingLeft="@dimen/fifteen"
            android:text="@string/invitation_code_txt"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_extra_small" />

        <TextView
            android:id="@+id/tv_determine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/butt"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginRight="@dimen/fifteen"
            android:layout_marginTop="@dimen/fifteen"
            android:background="@drawable/bg_login_btn_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_extra_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_user_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_user_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/butt"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/butt"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="邀请了您"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>
</LinearLayout>