<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/radio_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/fifteen"
        android:layout_marginTop="22dp"
        android:background="@drawable/img_ck_yes"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/text_image_height"
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/text_size_extra_extra_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginRight="@dimen/fifteen"
            android:background="@drawable/yuanjiao"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_dian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wu"
                    android:src="@drawable/red_dot"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/wu"
                    android:paddingTop="@dimen/wu"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/text_size_shiwu" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_ck_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/butt"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/lins_hui" />

                <TextView
                    android:id="@+id/ck_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/butt"
                    android:layout_weight="1"
                    android:background="@drawable/item_press_selector"
                    android:drawableRight="@drawable/bianjixxhdpi"
                    android:gravity="center|left"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="查看详情"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/text_size_shiwu" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>