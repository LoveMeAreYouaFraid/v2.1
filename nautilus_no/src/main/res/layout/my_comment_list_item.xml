<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal"
              android:padding="15dp">


    <RelativeLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        >

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar"/>

        <ImageView
            android:id="@+id/iv_official_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_official_tag"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="川川"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/text_size_extra_small"/>


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3分钟前"
            android:textColor="@color/normal_gray"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_extra_extra_small"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="怎么爱你都不嫌多！"
                android:textSize="@dimen/text_size_extra_small"
                android:textColor="@color/normal_black"/>

            <TableLayout
                android:id="@+id/tl_multi_pics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TableRow
                    android:id="@+id/tr_row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone" >

                    <com.nautilus.ywlfair.widget.AutoAdjustHeightImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_multi_pics_0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:aspectRatio="1" />

                    <com.nautilus.ywlfair.widget.AutoAdjustHeightImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_multi_pics_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:aspectRatio="1" />

                    <com.nautilus.ywlfair.widget.AutoAdjustHeightImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_multi_pics_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:aspectRatio="1" />
                </TableRow>

                <TableRow
                    android:id="@+id/tr_row2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:visibility="gone" >

                    <com.nautilus.ywlfair.widget.AutoAdjustHeightImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_multi_pics_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:aspectRatio="1" />

                    <com.nautilus.ywlfair.widget.AutoAdjustHeightImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_multi_pics_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:aspectRatio="1" />

                    <com.nautilus.ywlfair.widget.AutoAdjustHeightImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_multi_pics_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:aspectRatio="1" />
                </TableRow>

                <TableRow
                    android:id="@+id/tr_row2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:visibility="gone" >

                    <com.nautilus.ywlfair.widget.AutoAdjustHeightImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_multi_pics_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:aspectRatio="1" />

                    <com.nautilus.ywlfair.widget.AutoAdjustHeightImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_multi_pics_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:aspectRatio="1" />

                    <com.nautilus.ywlfair.widget.AutoAdjustHeightImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_multi_pics_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:aspectRatio="1" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yuanjiaohui_2dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_no_receipt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="水源："
                    android:textColor="@color/text_blue"/>


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="你是我的小丫小苹果"
                    android:textColor="@color/light_black"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>