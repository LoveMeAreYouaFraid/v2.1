<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_background"
              android:orientation="vertical">

    <include layout="@layout/app_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/butt"
        android:gravity="center|left"
        android:paddingLeft="@dimen/fifteen"
        android:paddingRight="@dimen/fifteen"
        android:text="问题反馈(单选)"
        android:textColor="@color/extra_dark_gray"
        android:textSize="@dimen/text_size_shiwu"/>

    <com.nautilus.ywlfair.widget.SelectListTextView
        android:id="@+id/my_select_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/other"
        android:layout_width="match_parent"
        android:layout_height="@dimen/butt"
        android:background="@drawable/item_press_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/butt"
            android:gravity="center|left"
            android:paddingLeft="@dimen/fifteen"
            android:paddingRight="@dimen/fifteen"
            android:text="其他原因"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/text_size_shiwu"
            />

        <TextView
            android:id="@+id/tv_other"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right|center"
            android:maxLength="16"
            android:maxLines="1"
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/text_size_extra_small"/>

        <View
            android:layout_width="@dimen/text_image_height"
            android:layout_height="@dimen/text_image_height"
            android:layout_gravity="center|right"
            android:layout_marginRight="@dimen/fifteen"
            android:background="@drawable/bianjixxhdpi"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/butt"
        android:layout_marginTop="@dimen/fifteen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/butt"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center|left"
            android:paddingLeft="@dimen/fifteen"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/text_size_shiwu"/>

        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="right|center"
            android:hint="请输入您的手机号码"
            android:inputType="phone"
            android:paddingRight="@dimen/fifteen"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/text_size_shiwu"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/fifteen"
        android:paddingRight="@dimen/fifteen"
        android:text="填写您的手机号码，方便我们更好的解决问题"
        android:textColor="@color/normal_gray"
        android:textSize="@dimen/text_size_extra_extra_small"/>
</LinearLayout>