<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="45dp"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:text="选择性别"
        android:textColor="@color/normal_black"
        android:textSize="@dimen/text_size_large" />

    <include layout="@layout/fenge_hei" />

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/butt"
        android:background="@drawable/bg_btn_default_selector"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_main"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/butt"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="支付宝"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/text_size_small" />

        <CheckBox
            android:id="@+id/ck_man"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:button="@drawable/umeng_update_button_check_selector"
            android:layout_marginRight="15dp"
            android:checked="true"
            android:clickable="false"
            android:textColor="@color/normal_black" />

    </LinearLayout>

    <include layout="@layout/dividing_line_layout" />

    <LinearLayout
        android:id="@+id/lady"
        android:layout_width="match_parent"
        android:layout_height="@dimen/butt"
        android:background="@drawable/bg_btn_default_selector"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_lady"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/butt"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="微信"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/text_size_small" />

        <CheckBox
            android:id="@+id/ck_lady"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:button="@drawable/umeng_update_button_check_selector"
            android:layout_marginRight="15dp"
            android:clickable="false"
            android:textColor="@color/normal_black" />
    </LinearLayout>

    <include layout="@layout/dividing_line_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/butt"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_determine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_default_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_small" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/divider_color" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_default_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
</LinearLayout>
