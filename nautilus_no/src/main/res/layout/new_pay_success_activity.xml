<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical">

    <include layout="@layout/app_title" />

    <LinearLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/image_top_si_shi_ba"
            android:layout_height="@dimen/image_top_si_shi_ba"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/image_top_er_shi_si"
            android:background="@drawable/payment_successful" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="支付成功 !"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/text_size_shiwu" />

    </LinearLayout>

    <!--<include layout="@layout/fengexianx" />-->

    <LinearLayout
        android:id="@+id/tv_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center|left"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/fifteen"
            android:paddingRight="@dimen/fifteen"
            android:paddingTop="@dimen/fifteen"
            android:text="订单编号"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/text_size_shiwu" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center|left"
            android:paddingBottom="@dimen/fifteen"
            android:paddingLeft="@dimen/fifteen"
            android:paddingRight="@dimen/fifteen"
            android:text="温馨提醒：请妥善保存好订单编号，凭此号兑换商品。"
            android:textColor="@color/money_tips"
            android:textSize="@dimen/text_size_extra_extra_small" />
    </LinearLayout>
    <!--<include layout="@layout/fengexianx" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_stall"
            android:layout_width="@dimen/image_top"
            android:layout_height="@dimen/image_top"
            android:layout_marginBottom="@dimen/fifteen"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/fifteen"
            android:background="@drawable/default_avatar" />

        <TextView
            android:id="@+id/tv_stall_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="支付成功"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/text_size_shiwu" />

    </LinearLayout>

    <!--<include layout="@layout/feng_ge_xian_left" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/fifteen"
            android:paddingTop="@dimen/fifteen"
            android:text="消费金额："
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_shiwu" />

        <TextView
            android:id="@+id/tv_preferential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/fifteen"
            android:paddingTop="@dimen/fifteen"
            android:text="消费金额：\n已优惠：  asas"
            android:textColor="@color/money_red"
            android:textSize="@dimen/text_size_shiwu" />

    </LinearLayout>

    <!--<include layout="@layout/feng_ge_xian_left" />-->

    <TextView
        android:id="@+id/tv_actual_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="right"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/fifteen"
        android:paddingTop="@dimen/fifteen"
        android:text="支付成功"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_pay_and_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="right"
        android:paddingBottom="@dimen/fifteen"
        android:paddingRight="@dimen/fifteen"
        android:text="zhifufangshi"
        android:textColor="@color/normal_gray"
        android:textSize="@dimen/text_size_extra_extra_small" />

    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifteen"
        android:background="@color/white"
        android:gravity="center|left"
        android:padding="@dimen/fifteen"
        android:text="订单编号"
        android:textColor="@color/normal_black"
        android:textSize="@dimen/text_size_shiwu"
        android:visibility="gone" />
</LinearLayout>