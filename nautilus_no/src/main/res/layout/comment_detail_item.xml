<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar" />

            <ImageView
                android:id="@+id/iv_official_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_official_tag"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_floor_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textSize="@dimen/text_size_mini"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/normal_gray"
            android:text="170楼" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_extra_small"
                android:layout_marginTop="5dp"
                android:text="用户昵称" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_name"
                android:drawableLeft="@drawable/gpsxx"
                android:textColor="@color/fontgrey"
                android:textSize="@dimen/text_size_mini"
                android:gravity="bottom"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:visibility="gone"
                android:text="上海罢赛美术馆" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/text_size_mini"
            android:layout_marginTop="5dp"
            android:text="1分钟前" />
        
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_extra_small"
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_gray"
            android:text="谢谢，哈哈谢谢，哈哈谢谢，哈哈谢谢，哈哈！" />
    </LinearLayout>

</LinearLayout>