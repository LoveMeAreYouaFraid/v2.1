<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_h"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/top_btn_press_selector"
            android:padding="5dp"
            android:src="@drawable/ic_back_nor" />

        <TextView
            android:id="@+id/tv_top_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收货地址"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tv_add_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/top_btn_press_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/fifteen"
            android:paddingRight="@dimen/fifteen"
            android:text="修改"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

    <include layout="@layout/dividing_line_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_key"
            android:layout_width="@dimen/ninety_four"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:gravity="left|center"
                android:paddingLeft="@dimen/title_left_margin"
                android:text="姓名"
                android:textColor="@color/normal_gray"
                android:textSize="@dimen/text_size_extra_small" />

            <include layout="@layout/fengexianx" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:gravity="left|center"
                android:paddingLeft="@dimen/title_left_margin"
                android:text="手机号"
                android:textColor="@color/normal_gray"
                android:textSize="@dimen/text_size_extra_small" />

            <include layout="@layout/fengexianx" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:gravity="left|center"
                android:paddingLeft="@dimen/title_left_margin"
                android:text="邮编"
                android:textColor="@color/normal_gray"
                android:textSize="@dimen/text_size_extra_small" />

            <include layout="@layout/fengexianx" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:gravity="left|center"
                android:paddingLeft="@dimen/title_left_margin"
                android:text="省，市"
                android:textColor="@color/normal_gray"
                android:textSize="@dimen/text_size_extra_small" />

            <include layout="@layout/fengexianx" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_hxx"
                android:gravity="center|top|left"
                android:paddingLeft="@dimen/title_left_margin"
                android:paddingTop="@dimen/title_left_margin"
                android:text="详细地址"
                android:textColor="@color/normal_gray"
                android:textSize="@dimen/text_size_extra_small" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/title_left_margin">

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:background="@null"
                android:hint="姓名"
                android:maxLines="1"
                android:maxLength="10"
                android:paddingLeft="@dimen/fifteen"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_extra_small" />

            <include layout="@layout/fengexianx" />

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:background="@null"
                android:digits="1234567890"
                android:hint="手机号"
                android:inputType="phone"
                android:maxLines="1"
                android:maxLength="11"
                android:paddingLeft="@dimen/fifteen"
                android:singleLine="true"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_extra_small" />

            <include layout="@layout/fengexianx" />

            <EditText
                android:id="@+id/ed_zip_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:background="@null"
                android:hint="邮编"
                android:maxLength="10"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="@dimen/fifteen"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_extra_small" />

            <include layout="@layout/fengexianx" />

            <TextView
                android:id="@+id/tv_select_provinces"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:background="@drawable/item_press_selector"
                android:gravity="center|left"
                android:hint="省，市"
                android:paddingLeft="@dimen/fifteen"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_extra_small" />

            <include layout="@layout/fengexianx" />

            <EditText
                android:id="@+id/ed_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_hxx"
                android:background="@null"
                android:gravity="top"
                android:hint="详细地址"
                android:maxLines="3"
                android:paddingLeft="@dimen/fifteen"
                android:paddingTop="@dimen/title_left_margin"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_extra_small" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
