<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/item_press_selector"
              android:orientation="vertical"
              android:paddingTop="5dp"
              android:paddingLeft="2dp"
              android:paddingRight="2dp">


        <com.nautilus.ywlfair.widget.AutoAdjustHeightImageView
            android:id="@+id/recommend_image"
            xmlns:app="http://schemas.android.com/apk/res/com.nautilus.ywlfair"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:aspectRatio="3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/recommend_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="2sp"
                android:maxLines="2"
                android:text="的撒旦撒旦结婚年龄啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊卡机"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/recommend_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/diansibain"
                android:drawablePadding="8dp"
                android:paddingTop="6dp"
                android:text="作者:大苏  2015 06~"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_mini"/>

            <TextView
                android:id="@+id/recommend_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:lineSpacingExtra="2sp"
                android:maxLines="3"
                android:text="的撒旦撒旦结婚年龄啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊卡机"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_extra_small"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/recommend_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:layout_weight="1"
                    android:text="创意分享"
                    android:textColor="@color/yellow_normal"
                    android:textSize="@dimen/text_size_mini"/>

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:drawableLeft="@drawable/ic_praise_num"
                    android:drawablePadding="2dp"
                    android:text="123  "/>

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@drawable/ic_commend_num"
                    android:drawablePadding="2dp"
                    android:text="123  "/>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>