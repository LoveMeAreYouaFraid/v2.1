<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_background"
              android:orientation="vertical">

    <include layout="@layout/app_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_ticket_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#FFF7FAFA"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    >

                    <ImageView
                        android:id="@+id/iv_active_image"
                        android:layout_width="82dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/tv_active_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="场次:夏日狂欢季场次:夏日狂欢季场次:夏日狂欢季场次:夏日狂欢季场次:夏日狂欢季"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_extra_extra_small"/>

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="活动日期：2015.06.13 ~ 06.14"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_extra_extra_small"/>

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="活动时间：12:00 ~ 21:00"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_extra_extra_small"/>

                        <TextView
                            android:id="@+id/tv_venue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="活动场馆：大同坊"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_extra_extra_small"/>

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="活动地址：大同坊巨鹿路(近成都北路)"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_extra_extra_small"/>

                        <TextView
                            android:id="@+id/tv_ticket_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="门票价格：￥20.00"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_extra_extra_small"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_item_h"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_total_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:paddingRight="20dp"
                        android:text="共计 1 张"
                        android:textColor="@color/normal_black"/>

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="合计：18"
                        android:textColor="@color/money_num"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_stall_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/iv_type_tag"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/deposit"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/tv_stall_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="摊位：A"
                            android:textColor="@color/normal_black"
                            android:textSize="@dimen/text_size_extra_small"/>

                        <TextView
                            android:id="@+id/tv_booth_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="摊位费：￥100.00"
                            android:textColor="@color/normal_black"
                            android:textSize="@dimen/text_size_extra_small"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_stall_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="摊位说明：摊位说明摊位说明摊位说明摊位说明摊位说明摊位说明摊位说明摊位说明"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/text_size_extra_extra_small"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF7FAFA"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    >

                    <ImageView
                        android:id="@+id/iv_stall_act_image"
                        android:layout_width="82dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_center_background"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/tv_stall_active_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="场次:夏日狂欢季场次:夏日狂欢季场次:夏日狂欢季场次:夏日狂欢季场次:夏日狂欢季"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_extra_extra_small"/>

                        <TextView
                            android:id="@+id/tv_active_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="活动场次：第二场"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_extra_extra_small"/>

                        <TextView
                            android:id="@+id/tv_stall_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="本场市集日期：2015.08.05"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_extra_extra_small"/>

                        <TextView
                            android:id="@+id/tv_stall_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="本场摊主入场时间：08：00~21：00"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_extra_extra_small"/>

                        <TextView
                            android:id="@+id/tv_stall_site"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="活动场馆：大同坊"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_extra_extra_small"/>

                        <TextView
                            android:id="@+id/tv_stall_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="活动地址：大同坊巨鹿路(近成都北路)"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_extra_extra_small"/>


                        <TextView
                            android:id="@+id/tv_stall_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:padding="5dp"
                            android:text="摊位类型: A型摊位"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_size_extra_extra_small"
                            android:visibility="gone"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_phone_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_item_h"
                    android:background="@color/gray_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="接收门票手机号"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/text_size_extra_small"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/butt"
                    android:background="@color/white"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:minWidth="110dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="手机号 : "
                        android:textColor="@color/light_black"/>


                    <EditText
                        android:id="@+id/tv_phone_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入您的手机号"
                        android:inputType="phone"
                        android:maxLength="20"
                        android:textColor="@color/normal_black"
                        android:textColorHint="@color/divider_color"
                        android:textSize="@dimen/text_size_extra_small"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/butt"
                    android:background="@color/white"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:minWidth="50dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="确认手机号 : "
                        android:textColor="@color/light_black"/>


                    <EditText
                        android:id="@+id/tv_phone_two"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请再次输入您的手机号"
                        android:inputType="phone"
                        android:maxLength="20"
                        android:textColor="@color/normal_black"
                        android:textColorHint="@color/divider_color"
                        android:textSize="@dimen/text_size_extra_small"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_use_score"
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_item_h"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_visible_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingLeft="15dp"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/text_size_shiwu"
                    />

                <ImageView
                    android:id="@+id/tv_is_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/bg_switch_selector"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/butt"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/ll_choose_pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="支付方式："
                        android:textColor="@color/normal_gray"
                        android:textSize="@dimen/text_size_extra_small"/>

                    <ImageView
                        android:id="@+id/iv_pay_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_ali_pay"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/bianjixxhdpi"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pay_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_transparent"
                    android:visibility="gone"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="支付方式"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_pay_method"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="支付宝"
                    android:textColor="@color/light_black"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/bianjixxhdpi"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/butt"
                android:visibility="gone">

                <com.nautilus.ywlfair.widget.NewPayMethodSelectLayout
                    android:id="@+id/pay_method_select"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/butt"
                    android:background="@color/white"
                    android:orientation="horizontal">

                </com.nautilus.ywlfair.widget.NewPayMethodSelectLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_stall_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="摊位价格"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/text_size_extra_small"/>

                <TextView
                    android:id="@+id/tv_stall_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/money_num"
                    android:textSize="@dimen/text_size_extra_small"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_stall_score"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="摊主积分（抵扣）"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/text_size_extra_small"/>

                <TextView
                    android:id="@+id/tv_score_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="-0"
                    android:textColor="@color/money_num"
                    android:textSize="@dimen/text_size_extra_small"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stall_sale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:paddingLeft="15dp"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_extra_small"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_item_h"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="还需付："
                android:textColor="@color/normal_black"
                android:textSize="@dimen/text_size_extra_small"
                />

            <TextView
                android:id="@+id/tv_need_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="15dp"
                android:text="￥"
                android:textColor="@color/money_num"
                android:textSize="@dimen/text_size_small"/>

        </LinearLayout>


        <com.nautilus.ywlfair.widget.RippleView
            android:id="@+id/bt_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_commit_btn_selector"
            android:gravity="center"
            android:text="确认支付"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>