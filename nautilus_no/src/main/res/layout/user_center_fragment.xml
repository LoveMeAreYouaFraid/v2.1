<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/user_center_background"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/iv_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/ic_none_message" />

                    <ImageView
                        android:id="@+id/img_user_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_system_setting" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/bg_white_circle" />

                    <ImageView
                        android:id="@+id/iv_header"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/default_avatar" />

                    <ImageView
                        android:id="@+id/iv_official_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_vendor_tag"
                        android:layout_marginRight="5dp"
                        android:visibility="visible"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_login_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_user_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_extra_extra_small"/>

                <LinearLayout
                    android:id="@+id/ll_level_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_level_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/level_progress"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_pre_level"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />

                        <ImageView
                            android:id="@+id/iv_current_level"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.3"
                            />

                        <ImageView
                            android:id="@+id/iv_next_level"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_num_privilege"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="@color/normal_gray"
                        android:textSize="@dimen/text_size_mini"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_normal_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_my_ticket"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/item_press_null"
                        android:drawableTop="@drawable/ic_my_ticket"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="我的门票"
                        android:textColor="@color/dark_gray"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/content_color"/>

                    <TextView
                        android:id="@+id/tv_my_sign"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/item_press_null"
                        android:drawableTop="@drawable/ic_my_sign"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="市集签到"
                        android:textColor="@color/dark_gray"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/content_color"/>

                    <TextView
                        android:id="@+id/tv_want_join"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/item_press_null"
                        android:drawableTop="@drawable/ic_wang_join"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="想去市集"
                        android:textColor="@color/dark_gray"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/ll_my_article"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_item_h"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/item_press_null"
                    android:drawableLeft="@drawable/ic_my_diy"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/bianjixxhdpi"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="我的原创"
                    android:textColor="@color/dark_gray"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/content_color"/>

                <TextView
                    android:id="@+id/ll_my_comments"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_item_h"
                    android:background="@drawable/item_press_null"
                    android:drawableLeft="@drawable/ic_my_comment"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/bianjixxhdpi"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="我的评论"
                    android:textColor="@color/dark_gray"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/content_color"/>

                <TextView
                    android:id="@+id/ll_my_order"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_item_h"
                    android:background="@drawable/item_press_null"
                    android:drawableLeft="@drawable/ic_my_order"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/bianjixxhdpi"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="我的订单"
                    android:textColor="@color/dark_gray"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_vendor_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/tv_my_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/order_item_h"
                        android:layout_weight="1"
                        android:background="@drawable/item_press_null"
                        android:drawableLeft="@drawable/ic_stall_deposit"
                        android:drawablePadding="5dp"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="摊位押金"
                        android:textColor="@color/dark_gray"/>

                    <TextView
                        android:id="@+id/tv_deposit_type"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/order_item_h"
                        android:background="@drawable/item_press_null"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/bianjixxhdpi"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/normal_gray"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/content_color"/>

                <TextView
                    android:id="@+id/ll_my_booth"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_item_h"
                    android:background="@drawable/item_press_null"
                    android:drawableLeft="@drawable/ic_my_stall"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/bianjixxhdpi"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="我的摊位"
                    android:textColor="@color/dark_gray"/>

                <TextView
                    android:id="@+id/tv_vendor_order"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_item_h"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/item_press_selector"
                    android:drawableLeft="@drawable/ic_vendor_order"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/bianjixxhdpi"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="摊主订单"
                    android:textColor="@color/dark_gray"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/content_color"/>

                <TextView
                    android:id="@+id/tv_vendor_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_item_h"
                    android:background="@drawable/item_press_selector"
                    android:drawableLeft="@drawable/ic_my_wallet"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/bianjixxhdpi"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="我的钱包"
                    android:textColor="@color/dark_gray"/>

                <LinearLayout
                    android:id="@+id/tv_invite_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/item_press_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/order_item_h"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/invite_friends"
                        android:drawablePadding="5dp"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="邀请好友"
                        android:textColor="@color/dark_gray" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/order_item_h"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/bianjixxhdpi"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="免费拿积分"
                        android:textColor="@color/money_red" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/content_color"/>

                <LinearLayout
                    android:id="@+id/tv_vendor_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/order_item_h"
                        android:layout_weight="1"
                        android:background="@drawable/item_press_null"
                        android:drawableLeft="@drawable/ic_vendor_info"
                        android:drawablePadding="5dp"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="摊主信息"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/tv_vendor_info_type"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/order_item_h"
                        android:background="@drawable/item_press_null"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/bianjixxhdpi"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/normal_gray" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_exchange_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/fifteen"
                android:layout_marginTop="@dimen/text_size_shiwu"
                android:background="@drawable/bg_exchange_user_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:text="切换至摊主身份"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>