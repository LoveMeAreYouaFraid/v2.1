<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_image_height"
        android:background="@drawable/tickets_bg"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fifteen"
            android:gravity="center"
            android:text="~门票二维码~"
            android:textColor="@color/hei"
            android:textSize="@dimen/text_size_shiwu" />

        <ImageView
            android:id="@+id/img_tickets_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/y_use_img" />

        <ImageView
            android:id="@+id/img_tickets_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="9dp" />

        <TextView
            android:id="@+id/tv_tickets_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/hei" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="保存二维码图片后，现场验票更快速"
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/text_size_shiwu" />
    </LinearLayout>
</LinearLayout>